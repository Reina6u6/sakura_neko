<div class="row justify-content-center">
 <div class="col-md-6">
  <h1 class="bg-info text-center text-white">プロフィール編集</h2>
   <%= form_with model: @user do |f| %>
   <div class="font-weight-bold text-info text-decoration-underline">
    <label for="inputName"><u>ユーザーネーム</u></label><br>
   </div>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
    <div class="font-weight-bold text-info text-decoration-underline">
     <label for="inputImage"><u>プロフィール画像</u></label><br>
    </div>


      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
     </div>
    </div>
    <div class="row justify-content-center">
     <div class="coll-6">
      <%= f.submit "変更する",  class: "btn btn-outline-info" %>
     </div>
    </div>
   <% end %>
 </div>
</div>
