<div class="row justify-content-center">
 <div class="col-md-6">
  <h1 class="bg-info text-center text-white">投稿フォーム</h1>

  <% if @post_image.errors.any? %>
   <%= @post_image.errors.count %>件のエラーが発生しました
   <ul>
    <% @post_image.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>

  <%= form_with model: @post_image do |f| %>
   <div class="font-weight-bold text-info text-decoration-underline">
    <h4><u>タイトル</u></h4>
   </div>
  <%= f.text_field :title %>

  <div class="font-weight-bold text-info text-decoration-underline">
   <h4><u>画像</u></h4>
  </div>
   <%= f.file_field :image, accept: "image/*" %>

  <div class="font-weight-bold text-info text-decoration-underline">
   <h4><u>タグ</u></h4>
  </div>
   <%= f.text_field :tag_list %>

  <div class="font-weight-bold text-info text-decoration-underline">
   <h4><u>本文</u></h4>
  </div>
   <%= f.text_area :caption %><br>
   <%= f.submit "送信する", class: "btn btn-outline-info" %>

  <% end %>
 </div>
</div>


